Checks: >
  clang-analyzer-*,
  cppcoreguidelines-*,
  bugprone-*,
  performance-*,
  readability-*,
  modernize-*,
  cert-*,
  hicpp-*

WarningsAsErrors: '*'

HeaderFilterRegex: '.*'
FormatStyle: file

CheckOptions:
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
  - key:             readability-identifier-naming.VariableCase
    value:           camelCase
  - key:             readability-identifier-naming.FunctionCase
    value:           camelCase
  - key:             readability-identifier-naming.ClassCase
    value:           PascalCase
  - key:             cppcoreguidelines-pro-type-member-init.HaltOnMissingInit
    value:           true